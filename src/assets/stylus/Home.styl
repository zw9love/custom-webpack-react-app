.home-container
  .table
    margin-top 20px
  .main
    padding-top calc(100% - 33.33%)
    position: relative
    .wrapper
      position: absolute
      left: 0
      top: 0
      width 100%
      height 100%
      display flex
      .left
        flex 2
        background-color #373737
        position: relative
        max-width 1100px
        overflow hidden
      .right
        flex 1
        background-color skyblue
        position: relative

@media (min-width: 1300px)
  .home-container
    .main
      padding-top 800px

